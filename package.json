{
  "name": "instapenguin",
  "version": "1.0.0",
  "description": "An unofficial Instagram desktop wrapper.",
  "main": "main.js",
  "author": "sl4pdev",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.sl4pdev.instapenguin",
    "productName": "InstaPenguin",
    "files": [
      "main.js",
      "preload.js",
      "app-info.json",
      "app/index.html",
      "icon.png"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png"
    }
  }
}